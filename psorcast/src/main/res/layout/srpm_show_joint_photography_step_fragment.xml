<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/rs2_step_fragment_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Upper Bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <org.sagebionetworks.research.mobile_ui.widget.ActionButton
            android:id="@id/rs2_step_navigation_action_cancel"
            style="@style/Widget.ResearchStack.StepHeader.CancelButton"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/rs2_cancel_icon"
            android:backgroundTint="@color/srpm_dark_font"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@id/rs2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:textColor="@color/srpm_dark_font"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rs2_step_navigation_action_cancel"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/rs2_step_navigation_shadow_upper"
            android:background="@drawable/srpm_scroll_view_shadow_reverse"
            android:layout_width="0dp"
            android:layout_height="@dimen/rs2_step_navigation_shadow_height"
            app:layout_constrainedHeight="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextureView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/camera_ui_container"
        app:layout_constraintTop_toBottomOf="@id/camera_title_bar"
        />

    <ImageView
        android:id="@+id/image_placeholder_upper_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_finder"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toBottomOf="@id/camera_title_bar"
        android:layout_marginTop="29dp"
        android:src="@drawable/srpm_image_placeholder_upper_left"/>

    <ImageView
        android:id="@+id/image_placeholder_upper_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/view_finder"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toBottomOf="@id/camera_title_bar"
        android:layout_marginTop="29dp"
        android:src="@drawable/srpm_image_placeholder_upper_right"/>

    <ImageView
        android:id="@+id/image_placeholder_lower_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_finder"
        android:layout_marginStart="29dp"
        app:layout_constraintBottom_toTopOf="@id/camera_ui_container"
        android:layout_marginBottom="29dp"
        android:src="@drawable/srpm_image_placeholder_lower_left"/>

    <ImageView
        android:id="@+id/image_placeholder_lower_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/view_finder"
        android:layout_marginEnd="29dp"
        app:layout_constraintBottom_toTopOf="@id/camera_ui_container"
        android:layout_marginBottom="29dp"
        android:src="@drawable/srpm_image_placeholder_lower_right"/>

    <!-- Lower Bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_ui_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/rs2_step_navigation_shadow_lower"
            style="@style/Widget.ResearchStack.NavigationActionBar.Shadow"
            android:layout_width="0dp"
            android:layout_height="@dimen/rs2_step_navigation_shadow_height"
            app:layout_constrainedHeight="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.2dp"
            android:background="@drawable/srpm_camera_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/capture_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/capture_button"
            android:layout_marginTop="13.44dp"
            android:layout_marginBottom="20.16dp"
            android:text="@string/srpm_capture_image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:textColor="@color/srpm_dark_font"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
