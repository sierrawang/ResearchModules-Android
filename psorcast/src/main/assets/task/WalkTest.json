{
  "identifier": "WalkTest",
  "shouldHideActions": [
    "goBackward",
    "skip"
  ],
  "steps": [
    {
      "identifier": "walkInstructions",
      "type": "instruction",
      "title": "First, walk for 30 seconds",
      "text": "You will be walking continuously at your normal pace for 30 seconds. Try to walk in a straight path. If you need to turn around then turn around as if you are walking around a cone.",
      "image": {
        "type": "animated",
        "imageNames": [
          "srpm_walking1",
          "srpm_walking2",
          "srpm_walking3",
          "srpm_walking4",
          "srpm_walking5",
          "srpm_walking6",
          "srpm_walking12",
          "srpm_walking7",
          "srpm_walking8",
          "srpm_walking9",
          "srpm_walking10",
          "srpm_walking11"
        ],
        "placementType": "topMarginBackground",
        "animationDuration": 3,
        "backgroundColor": "#6DB585"
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "Primary"
        }
      }
    },
    {
      "identifier": "volumeInstructions",
      "type": "instruction",
      "title": "Turn the volume up",
      "text": "Bring your phone with you and turn up your phone volume so you can hear the instructions while you are walking.",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_volume",
        "placementType": "topMarginBackground",
        "backgroundColor": "#6DB585"
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "Primary"
        }
      }
    },
    {
      "identifier": "pantsInstructions",
      "type": "instruction",
      "title": "Pants with front pockets",
      "text": "Before continuing on with the short walk, please make sure you have front pockets so you have a place to put the phone. If you do not have pockets you can place the phone in the waistband of your pants.",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_pants",
        "placementType": "topMarginBackground",
        "backgroundColor": "#6DB585"
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "Primary"
        }
      }
    },
    {
      "identifier": "pocketInstructions",
      "type": "instruction",
      "title": "Put the phone in your pocket",
      "text": "This test measures your leg movement and you will need to put your phone in your front pocket. If you do not have pockets you can place the phone in the waistband of your pants.",
      "image": {
        "type": "animated",
        "imageNames": [
          "srpm_pocket1",
          "srpm_pocket2",
          "srpm_pocket3"
        ],
        "placementType": "topMarginBackground",
        "animationDuration": 1
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "Primary"
        }
      }
    },
    {
      "identifier": "countdown.1",
      "type": "srpmCountdown",
      "text": "Begin in...",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_walking_transparent1",
        "placementType": "fullsizeBackground",
        "backgroundColor": "#6DB585"
      },
      "duration": 5,
      "commands": [
        "transitionAutomatically"
      ],
      "actions": {
        "skip": {
          "type": "navigation",
          "skipToIdentifier": "walkInstructions",
          "buttonTitle": "Review instructions"
        }
      }
    },
    {
      "identifier": "walk",
      "type": "section",
      "asyncActions": [
        {
          "identifier": "motion",
          "type": "motion",
          "requiresBackgroundAudio": true,
          "recorderTypes": [
            "accelerometer",
            "gyro"
          ]
        }
      ],
      "steps": [
        {
          "identifier": "motion",
          "type": "psorcastActive",
          "title": "Walk back and forth",
          "duration": 30,
          "image": {
            "type": "fetchable",
            "imageName": "srpm_walking_transparent1",
            "placementType": "fullsizeBackground",
            "backgroundColor": "#6DB585"
          },
          "actions": {
            "skip": {
              "type": "navigation",
              "skipToIdentifier": "countdown.1",
              "buttonTitle": "Restart test"
            },
            "learnMore": {
              "type": "navigation",
              "skipToIdentifier": "walkInstructions",
              "buttonTitle": "Review instructions"
            }
          },
          "commands": [
            "transitionAutomatically",
            "shouldDisableIdleTimer",
            "vibrate",
            "playSound"
          ],
          "spokenInstructions": {
            "start": "Walk for 30 seconds. If you need to turn back, turn gently around as if you are turning around a cone.",
            "halfway": "Halfway done.",
            "23": "Almost done."
          }
        }
      ]
    },
    {
      "identifier": "completion",
      "type": "completion",
      "title": "Thank you!",
      "text": "By completing this activity, you're providing us with key 'puzzle pieces' of data that we need to research how psoriasis works.",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_completion",
        "placementType": "topBackground"
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "Done"
        }
      }
    }
  ]
}